<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.NoteApp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationBase"
        tools:replace="android:icon">
        <activity
            android:name="com.example.NoteApp.EditActivity"
            android:label="编辑记事"
            android:parentActivityName="com.example.NoteApp.MainActivity" />
        <activity
            android:name="com.example.NoteApp.AddActivity"
            android:label="添加记事"
            android:parentActivityName="com.example.NoteApp.MainActivity" />
        <activity
            android:name="com.example.NoteApp.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>